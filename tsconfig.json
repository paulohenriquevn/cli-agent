{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/tools/healing/**/*",
    "src/tools/healing.disabled/**/*",
    "src/tools/execution/*.disabled",
    "src/tools/registry/__tests__/*.disabled",
    "src/tools/execution/__tests__/*.disabled",
    "src/tools/implementations/toolHealingTool.ts",
    "src/agent/cliAgent.ts"
  ]
}