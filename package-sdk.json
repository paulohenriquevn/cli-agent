{
  "name": "sdkagent",
  "version": "1.0.0",
  "private": true,
  "description": "CLI Agent Tools SDK for LangGraph - 28+ production-ready tools for AI agents",
  "main": "dist/bridge/index.js",
  "types": "dist/bridge/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/bridge/index.d.ts",
      "import": "./dist/bridge/index.mjs",
      "require": "./dist/bridge/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/bridge/",
    "dist/tools/",
    "dist/sdk/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "cd src/tools/tests && npx jest --config jest.config.js",
    "lint": "npx eslint src/**/*.ts --fix",
    "typecheck": "npx tsc --noEmit"
  },
  "keywords": [
    "cli-agent",
    "langgraph",
    "langchain", 
    "ai-tools",
    "function-calling",
    "ai-agents",
    "automation",
    "sdk",
    "typescript"
  ],
  "author": "CLI Agent Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sdkagent.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/sdkagent/issues"
  },
  "homepage": "https://github.com/yourusername/sdkagent#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.0",
    "fs-extra": "^11.2.0",
    "openai": "^4.104.0",
    "zod": "^3.22.0"
  },
  "peerDependencies": {
    "@langchain/core": ">=0.3.0",
    "@langchain/langgraph": ">=0.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "typescript": "^5.0.0"
  }
}