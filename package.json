{
  "name": "cli-agent-tools",
  "version": "1.0.0",
  "description": "CLI Agent Tools System - TypeScript CLI without VSCode dependencies",
  "main": "test-cli-tools.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/login-server.js",
    "dev": "ts-node login-server.ts",
    "test": "cd src/tools/tests && npx jest --config jest.config.js",
    "test:summary": "cd src/tools/tests && npx ts-node run-tests.ts",
    "test:verbose": "cd src/tools/tests && npx jest --config jest.config.js --verbose",
    "test:silent": "cd src/tools/tests && npx jest --config jest.config.js --silent",
    "test:watch": "cd src/tools/tests && npx jest --config jest.config.js --watch",
    "test:tool": "cd src/tools/tests && npx jest --config jest.config.js",
    "test:registry": "cd src/tools/tests && npx jest registry.test.ts --config jest.config.js",
    "test:refactored": "cd src/tools/tests && npx jest readFileTool.test.ts writeFileTool.test.ts editFileTool.test.ts bashCommandTool.test.ts --config jest.config.js",
    "test:cli": "npx ts-node test-cli-tools.ts",
    "lint": "npx eslint src/**/*.ts --fix",
    "lint:check": "npx eslint src/**/*.ts",
    "typecheck": "npx tsc --noEmit",
    "typecheck:watch": "npx tsc --noEmit --watch",
    "check": "npm run lint:check && npm run typecheck",
    "fix": "npm run lint && npm run typecheck",
    "validate": "npm run check && npm run test:summary"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
